<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bóng đổ mềm ở phía dưới/phải -->
    <item android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Lớp nền chính -->
    <item>
        <shape android:shape="rectangle">
            <!-- Gradient xanh dương pastel dịu mắt -->
            <gradient
                android:startColor="#E3F2FD"
                android:endColor="#BBDEFB"
                android:angle="90" />

            <!-- Viền mảnh màu xanh dương nhạt -->
            <stroke
                android:width="1dp"
                android:color="#90CAF9" />

            <!-- Bo góc mềm mại -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>

